<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <RadioGroup android:id="@+id/GrbGrupo1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <ImageView
        android:layout_width="201dp"
        android:layout_height="173dp"
        android:id="@+id/imageView"
        android:src="@drawable/ipleones"
            android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="78dp"
            android:text="Malla"
            android:id="@+id/radioButton"
            android:layout_above="@+id/radioButton2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:checked="false" />

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:text="Descripcion de la carrera"
            android:id="@+id/radioButton2"
            android:layout_above="@+id/radioButton3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <RadioButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Imagenes laboratorio"
        android:id="@+id/radioButton3"
        android:layout_marginBottom="85dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

        <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adolfo Valdes"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    </RadioGroup>

</RelativeLayout>
